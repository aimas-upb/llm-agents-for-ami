@prefix td: <https://www.w3.org/2019/wot/td#> .
@prefix htv: <http://www.w3.org/2011/http#> .
@prefix hctl: <https://www.w3.org/2019/wot/hypermedia#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix wotsec: <https://www.w3.org/2019/wot/security#> .
@prefix js: <https://www.w3.org/2019/wot/json-schema#> .
@prefix acl: <http://www.w3.org/ns/auth/acl#> .
@prefix hmas: <https://purl.org/hmas/> .
@prefix cashmere: <https://aimas.cs.pub.ro/ont/cashmere#> .
@prefix ex: <http://example.org/> .

<http://localhost:8080/workspaces/lab308/artifacts/PeoplePresenceSensor308/#artifact>
    a td:Thing, cashmere:ContextAuthorizedResource, hmas:Artifact, ex:PeoplePresenceSensor ;
    td:title "PeoplePresenceSensor308 with Context-Based Authorization" ;
    td:hasSecurityConfiguration [ a wotsec:NoSecurityScheme ] ;
    
    td:hasPropertyAffordance [
        a td:PropertyAffordance, ex:PresenceProperty ;
        td:name "presence" ;
        td:hasForm [
            htv:methodName "GET" ;
            hctl:hasTarget <http://localhost:8080/workspaces/lab308/artifacts/PeoplePresenceSensor308/presence> ;
            hctl:forContentType "application/json" ;
            hctl:hasOperationType td:readProperty ;
        ] ;
        td:hasOutputSchema [
            a js:ObjectSchema ;
            js:properties [
                a js:BooleanSchema ;
                js:propertyName "presence"
            ] ;
            js:required ("presence") ;
          js:additionalProperties false
        ] ;
    ] ;
    
    cashmere:hasAccessAuthorization [
        a cashmere:ContextBasedAuthorization ;
        acl:accessTo <http://localhost:8080/workspaces/lab308/artifacts/PeoplePresenceSensor308/#artifact> ;
        acl:mode acl:Read ;
        cashmere:hasAccessCondition ex:peoplePresenceSensor308AccessCondition
    ] .
